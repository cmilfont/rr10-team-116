<% semantic_form_for @book, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :edition %>
    <%= f.text_field :edition %>
  </p>
  <p>
    <%= f.label :publisher %>
    <%= f.text_field :publisher %>
  </p>
  <p>
    <%= f.label :file %>
    <%= f.file_field :file %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

