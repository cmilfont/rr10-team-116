<div id="sidebar">
  <h2>What is this place?</h2>
  <p>Here you will list all your books and covers, and find by content.</p>
  <h2>Search my books</h2>
  <% form_tag ("/books/search_mybooks", :method => :get) do %>
    <p><%= text_field_tag :query, @query %></p>
    <p><%= submit_tag "Buscar" %></p>
  <% end %>
</div>

<%= render 'books' %>

<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %>
<% end %>