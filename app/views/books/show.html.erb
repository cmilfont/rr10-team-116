<div id="sidebar">
  <p><%= image_tag(@book.small_image_path, :alt => @book.title)%></p>
</div>

<h1><%=h @book.title %></h1>
<%= link_to 'Edit', edit_book_path(@book), :class => 'button' %>
<%= link_to 'Destroy', @book, :confirm => 'Are you sure?', :method => :delete, :class => 'button' %>
<p><%= ratings_for @book %></p>
<p>
  <b>TITLE:</b>
  <%=h @book.title %>
</p>

<p>
  <b>AUTHOR:</b>
  <%=h @book.author %>
</p>

<p>
  <b>YEAR:</b>
  <%=h @book.year %>
</p>

<p>
  <b>EDITION:</b>
  <%=h @book.year %>
</p>

<p>
  <b>PUBLISHER:</b>
  <%=h @book.publisher %>
</p>

<p>
  <b>PAGES:</b>
  <%=h @book.pages.size %>
</p>

<p>
  <b>FILE:</b>
  <a href="<%=h @book.file.url %>">Get book</a>
</p>

<%#= render 'books' %>
