<div id="sidebar">
  <h2>Top Rated Books</h2>
  <ul id="books">
    <% Book.top_rated_books.each do |book| %>
      <li><%= link_to image_tag(book.thumb_image_path, :border => 0, :title => book.title, :alt => book.title, :width => "50"), book %></li>
    <% end %>
  </ul>

  <h2>Last Added Books</h2>
  <ul id="books">
    <% Book.recent_books.each do |book| %>
      <li><%= link_to image_tag(book.thumb_image_path, :border => 0, :title => book.title, :alt => book.title, :width => "50"), book %></li>
    <% end %>
  </ul>
  <ul id="books"><h2>Tags</h2>
	<li><% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
	  <%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %>
	<% end %></li>
	</ul>
</div>

<img src="/images/banner.jpg">
