<h1>Upload, organize and share pdf books with your friends</h1>
<br />


<ul id="books">
  <div class="shelf">Top Rated Books
  <% Book.top_rated_books.each do |book| %>
    	<li><%= link_to image_tag(book.thumb_image_path, :border => 0, :title => book.title, :alt => book.title), book %></li>
  <% end %>
  </div>
  <div class="shelf">Last Added Books
  <% Book.recent_books.each do |book| %>
    	<li><%= link_to image_tag(book.thumb_image_path, :border => 0, :title => book.title, :alt => book.title), book %></li>
  <% end %>
  </div>
</ul>



<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %>
<% end %>