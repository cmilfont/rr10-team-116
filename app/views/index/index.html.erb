<h1>Top Rated Books</h1><br /><br />
<ul id="books">
  <% Book.top_rated_books.each do |book| %>
    <li><%= link_to image_tag(book.thumb_image_path, :border => 0, :title => book.title, :alt => book.title), book %></li>
  <% end %>
</ul>

<h1>Last Added Books</h1><br /><br />
<ul id="books">
  <% Book.recent_books.each do |book| %>
    <li><%= link_to image_tag(book.thumb_image_path, :border => 0, :title => book.title, :alt => book.title), book %></li>
  <% end %>
</ul>
